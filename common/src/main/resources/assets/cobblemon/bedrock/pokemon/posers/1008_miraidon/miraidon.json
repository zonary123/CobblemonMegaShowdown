  "poses": {
    "battle-standing": {
      "transformTicks": 10,
      "poseTypes": ["STAND", "WALK"],
       "condition": "q.has_entity ? !q.in_air : 1.0",
      "isBattle": true,
      "animations": [
        "q.look('head')",
        "q.bedrock('miraidon', 'battle_idle')"
      ],
            "transitions": {
                "standing": "q.bedrock_primary('miraidon', 'battle_outro', q.curve('one'))"
            }
    },
    "standing": {
      "transformTicks": 10,
      "poseTypes": ["STAND", "NONE", "PORTRAIT", "PROFILE"],
      "isBattle": false,
      "condition": "!q.is_ridden",
      "animations": [
        "q.look('head')",
        "q.bedrock('miraidon', 'ground_idle')"
      ],
      "quirks": [
       "q.bedrock_quirk('miraidon', 'blink')"],
            "transitions": {
                "battle-standing": "q.bedrock_primary('miraidon', 'battle_intro', q.curve('one'))"
            }
    },
    "walking": {
      "poseTypes": ["WALK", "SWIM"],
	  "isBattle": false,
      "animations": ["q.look('head')", "q.bedrock('miraidon', 'ground_walk')"],
      "quirks": [
       "q.bedrock_quirk('miraidon', 'blink')"],
      "condition": "!q.is_ridden"
    },
    "ride_jump": {
      "poseTypes": ["WALK","STAND", "FLOAT", "NONE"],
      "isBattle": false,
      "condition": "q.in_air && q.is_ridden && q.has_entity",
