      "transformTicks": 5,
      "transformToTicks": 5
    },
   "mount_idle": {
      "poseTypes": ["STAND"],
      "isBattle": false,
	  "isTouchingWater": false,
      "animations": [
        "q.look('head')",
        "q.bedrock('miraidon', 'ride_ground_idle')"
      ],
      "quirks": [
       "q.bedrock_quirk('miraidon', 'blink')"],
      "condition": "q.is_ridden && !q.in_air"
    },
    "mount_walk": {
      "poseTypes": ["WALK"],
      "isBattle": false,
	  "isTouchingWater": false,
      "condition": "q.is_ridden && !q.is_sprinting && !q.is_air && q.has_entity",
      "animations": [
        "q.look('head')",
        "q.bedrock('miraidon', 'ride_ground_walk')"
      ],
      "quirks": [
       "q.bedrock_quirk('miraidon', 'blink')"],
