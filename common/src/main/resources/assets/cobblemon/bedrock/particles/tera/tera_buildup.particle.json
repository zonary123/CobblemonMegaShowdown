				"texture": "textures/particles/generic/sparkle/glowingsparkle.png"
			}
		},
		"components": {
			"minecraft:emitter_local_space": {
				"position": true,
				"rotation": true
			},
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 80,
				"max_particles": 100
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 1
			},
			"minecraft:emitter_shape_disc": {
				"offset": ["variable.particle_random_4", "variable.particle_random_4", "variable.particle_random_4"],
